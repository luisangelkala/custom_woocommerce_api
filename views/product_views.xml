<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        This view inherits the product template form to add the custom fields
        related to the WooCommerce integration.
    -->
    <record id="product_template_form_view_inherit_woocommerce" model="ir.ui.view">
        <field name="name">product.template.form.inherit.woocommerce</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']//group[@name='pricing']" position="after">
                <group name="woocommerce_integration" string="WooCommerce Integration">
                    <field name="x_brand_discount" readonly="1"/>
                    <field name="x_product_url" widget="url" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
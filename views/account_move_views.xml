<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_move_form_custom_priority" model="ir.ui.view">
    <field name="name">account.move.form.custom.priority</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="priority">1000</field>
    <field name="arch" type="xml">

      <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="replace"/>
      
      <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="attributes">
         <attribute name="column_invisible">1</attribute>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='tax_ids']" position="attributes">
         <attribute name="column_invisible">1</attribute>
      </xpath>

      <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="after">
         <field name="x_description" string="Description" optional="show" style="min-width: 200px;"/>
      </xpath>

      <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="attributes">
         <attribute name="string">Prix</attribute>
         <attribute name="optional">show</attribute>
      </xpath>

      <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
         <field name="discount" string="Disc.%" optional="show" style="width: 80px !important;"/>
         <field name="include_full_service_warranty" string="Garantie?" widget="boolean_toggle" width="90px"/>
      </xpath>

      <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="attributes">
         <attribute name="string">Montant</attribute>
      </xpath>


      <xpath expr="//field[@name='amount_residual']" position="before">
        <field name="amount_untaxed" string="Total" widget="monetary"/>
        
        <field name="amount_vat_20" string="TVA (20%)" widget="monetary"/>
        <field name="amount_total_incl_vat_20" string="Total TTC" widget="monetary" decoration-bf="1"/>
      </xpath>

      <xpath expr="//sheet/notebook" position="inside">
        <page string="Custom Info">
          <group>
            <field name="narration" string="Customer Financed" placeholder="Observations"/>
          </group>
        </page>
      </xpath>

    </field>
  </record>
</odoo>
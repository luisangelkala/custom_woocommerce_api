<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="portal_invoice_page_inherit_custom" model="ir.ui.view">
      <field name="name">portal.invoice.page.inherit.custom</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.portal_invoice_page"/>
      <field name="priority">1000</field>
      <field name="arch" type="xml">

        <xpath expr="//div[@id='invoice_content']" position="before">
            <style>
                /* Ocultar celdas que tengan la clase d-none (impuestos nativos) */
                #invoice_content table th.d-none.d-md-table-cell, 
                #invoice_content table td.d-none.d-md-table-cell {
                    display: none !important;
                }
                /* Ocultar totales originales */
                #total table tr:not(.custom-total) {
                    display: none !important;
                }
            </style>
        </xpath>

        <xpath expr="//div[hasclass('o_portal_contact_details')]" position="replace">
            <div class="o_portal_contact_details d-flex flex-column gap-2">
                <t t-if="invoice_move.financing_agency_id">
                    <div class="d-flex justify-content-start align-items-center gap-2">
                        <div>
                            <h6 class="mb-0" t-field="invoice_move.financing_agency_id.name"/>
                            <div t-field="invoice_move.financing_agency_id.address"/>
                            <div t-if="invoice_move.financing_agency_id.phone">
                                <strong>Téléphone :</strong> <span t-field="invoice_move.financing_agency_id.phone"/>
                            </div>
                            <div t-if="invoice_move.financing_agency_id.email">
                                <strong>Email :</strong> <span t-field="invoice_move.financing_agency_id.email"/>
                            </div>
                            <div t-if="invoice_move.financing_agency_id.siren">
                                <strong>Siren :</strong> <span t-field="invoice_move.financing_agency_id.siren"/>
                            </div>
                        </div>
                    </div>
                </t>
                <t t-else="">
                    <div class="d-flex justify-content-start align-items-center gap-2">
                        <div>
                            <h6 class="mb-0" t-field="invoice_move.partner_id.name"/>
                            <div t-field="invoice_move.partner_id.contact_address"/>
                            <div t-if="invoice_move.partner_id.phone">
                                <strong>Téléphone :</strong> <span t-field="invoice_move.partner_id.phone"/>
                            </div>
                            <div t-if="invoice_move.partner_id.email">
                                <strong>Email :</strong> <span t-field="invoice_move.partner_id.email"/>
                            </div>
                            <div t-if="invoice_move.partner_id.siren">
                                <strong>Siren :</strong> <span t-field="invoice_move.partner_id.siren"/>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </xpath>

        <xpath expr="//div[@id='invoice_content']//table//thead//tr" position="replace">
            <tr>
                <th class="text-start">Produit</th>
                <th class="text-end">Quantité</th>
                <th class="text-end">Prix</th>
                <th class="text-end">Disc.%</th>
                <th class="text-end">Montant</th>
            </tr>
        </xpath>

        <xpath expr="//div[@id='invoice_content']//table//tbody//tr" position="replace">
            <tr>
                <td class="text-start">
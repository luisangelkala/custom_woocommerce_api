<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="portal_invoice_page_inherit_custom" model="ir.ui.view">
      <field name="name">portal.invoice.page.inherit.custom</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.portal_invoice_page"/>
      <field name="priority">1000</field>
      <field name="arch" type="xml">

        <xpath expr="//div[@id='invoice_content']" position="before">
            <style>
                .custom-invoice-table th, .custom-invoice-table td { vertical-align: middle; }
            </style>
        </xpath>

        <xpath expr="//div[@id='invoice_content']" position="replace">
            <div id="invoice_content" class="o_portal_invoice_content">
                
                <table class="table table-sm table-striped custom-invoice-table" name="invoice_line_table">
                    <thead>
                        <tr>
                            <th class="text-start">Produit</th>
                            <th class="text-end">Quantité</th>
                            <th class="text-end">Prix</th>
                            <th class="text-end">Disc.%</th>
                            <th class="text-end">Montant</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="invoice.invoice_line_ids" t-as="line">
                            <t t-if="not line.display_type"> 
                                <tr>
                                    <td class="text-start"><span t-field="line.product_id.name"/></td>

                                    <td class="text-end">
                                        <span t-esc="'%.0f' % line.quantity"/>
                                        <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                    </td>

                                    <td class="text-end">
                                        <span t-esc="'%.0f' % line.sudo().price_unit"/>
                                        <span t-esc="invoice.currency_id.symbol"/>
                                    </td>

                                    <td class="text-end">
                                        <span t-esc="'%.0f' % line.discount"/> %
                                    </td>

                                    <td class="text-end">
                                        <span t-esc="'%.0f' % line.price_total"/>
                                        <span t-esc="invoice.currency_id.symbol"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="5" class="text-start small text-muted" style="border-top: none; padding-top: 0;">
                                        <t t-if="line.include_full_service_warranty">Inclut la garantie complète</t>
                                        <t t-else="">Inclut la garantie standard</t>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div id="total" class="row mt-4">
                    <div class="col-sm-7 col-md-6 ms-auto">
                        <table class="table table-sm">
                            <tr class="border-black custom-total">
                                <td><strong>Total :</strong></td>
                                <td class="text-end">
                                    <span t-esc="'%.0f' % invoice.amount_untaxed"/>
                                    <span t-esc="invoice.currency_id.symbol"/>
                                </td>
                            </tr>
                            <tr class="border-black custom-total">
                                <td><strong>TVA (20%) :</strong></td>
                                <td class="text-end">
                                    <span t-esc="'%.0f' % invoice.amount_vat_20"/>
                                    <span t-esc="invoice.currency_id.symbol"/>
                                </td>
                            </tr>
                            <tr class="border-black custom-total">
                                <td><strong>Total TTC :</strong></td>
                                <td class="text-end">
                                    <strong t-esc="'%.0f' % invoice.amount_total_incl_vat_20"/>
                                    <strong t-esc="invoice.currency_id.symbol"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('o_portal_contact_details')]" position="replace">
            <div class="o_portal_contact_details d-flex flex-column gap-2">
                <t t-if="invoice.financing_agency_id">
                    <div>
                        <h6 t-field="invoice.financing_agency_id.name"/>
                         <div t-field="invoice.financing_agency_id.address"/>
                    </div>
                </t>
                <t t-else="">
                    <div>
                        <h6 t-field="invoice.partner_id.name"/>
                        <div t-field="invoice.partner_id.contact_address"/>
                    </div>
                </t>
            </div>
        </xpath>

      </field>
    </record>
  </data>
</odoo>
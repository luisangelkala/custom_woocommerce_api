<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="portal_invoice_page_inherit_custom" model="ir.ui.view">
      <field name="name">portal.invoice.page.inherit.custom</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.portal_invoice_page"/>
      <field name="priority">1000</field>
      <field name="arch" type="xml">

        <xpath expr="//div[@id='invoice_content']" position="before">
            <style>
                .custom-invoice-table th, .custom-invoice-table td { vertical-align: middle; }
            </style>
        </xpath>

        <xpath expr="//div[@id='invoice_content']" position="replace">
            <div id="invoice_content" class="o_portal_invoice_content">
                
                <table class="table table-sm table-striped custom-invoice-table" name="invoice_line_table">
                    <thead>
                        <tr>
                            <th class="text-start">Produit</th>
                            <th class="text-end">Quantité</th>
                            <th class="text-end">Prix</th>
                            <th class="text-end">Disc.%</th>
                            <th class="text-end">Montant</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="invoice.invoice_line_ids.sudo()" t-as="line">
                            <t t-if="not line.display_type"> 
                                <tr>
                                    <td class="text-start">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.discount"/> %
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.price_total" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <!-- Totales usando los campos estándar de Odoo -->
                <div id="total" class="row mt-4">
                    <div class="col-sm-7 col-md-6 ms-auto">
                        <table class="table table-sm">
                            <tr class="border-black">
                                <td><strong>Total :</strong></td>
                                <td class="text-end">
                                    <span t-field="invoice.amount_untaxed" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                </td>
                            </tr>
                            <t t-foreach="invoice.amount_by_group" t-as="amount_by_group">
                                <tr class="border-black">
                                    <td>
                                        <strong>
                                            <span t-esc="amount_by_group[0]"/>
                                        </strong>
                                    </td>
                                    <td class="text-end">
                                        <span t-esc="amount_by_group[1]" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                    </td>
                                </tr>
                            </t>
                            <tr class="border-black">
                                <td><strong>Total TTC :</strong></td>
                                <td class="text-end">
                                    <strong t-field="invoice.amount_total" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('o_portal_contact_details')]" position="replace">
            <div class="o_portal_contact_details d-flex flex-column gap-2">
                <t t-if="invoice.financing_agency_id">
                    <div>
                        <h6 t-field="invoice.financing_agency_id.name"/>
                        <div t-field="invoice.financing_agency_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                    </div>
                </t>
                <t t-else="">
                    <div>
                        <h6 t-field="invoice.partner_id.name"/>
                        <div t-field="invoice.partner_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                    </div>
                </t>
            </div>
        </xpath>

      </field>
    </record>
  </data>
</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="portal_invoice_page_inherit_custom" model="ir.ui.view">
      <field name="name">portal.invoice.page.inherit.custom</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.portal_invoice_page"/>
      <field name="priority">1000</field>
      <field name="arch" type="xml">

        <xpath expr="//div[@id='invoice_content']" position="before">
            <style>
                .custom-invoice-table th, .custom-invoice-table td { vertical-align: middle; }
            </style>
        </xpath>

        <xpath expr="//div[@id='invoice_content']" position="replace">
            <div id="invoice_content" class="o_portal_invoice_content">
                
                <t t-set="lines" t-value="invoice.invoice_line_ids.sudo()"/>

                <table class="table table-sm table-striped custom-invoice-table" name="invoice_line_table">
                    <thead>
                        <tr>
                            <th class="text-start">Produit</th>
                            <th class="text-end">Quantité</th>
                            <th class="text-end">Prix</th>
                            <th class="text-end">Disc.%</th>
                            <th class="text-end">Montant</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="lines" t-as="line">
                            <t t-if="not line.display_type"> 
                                <tr>
                                    <td class="text-start">
                                        <span t-field="line.name"/>
                                    </td>

                                    <td class="text-end">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id"/>
                                    </td>

                                    <td class="text-end">
                                        <span t-esc="line.sudo().price_unit" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                    </td>

                                    <td class="text-end">
                                        <span t-if="line.discount > 0">
                                            <span t-field="line.discount"/> %
                                        </span>
                                    </td>

                                    <td class="text-end">
                                        <span t-esc="line.sudo().price_subtotal" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                    </td>
                                </tr>

                                <tr t-if="line.include_full_service_warranty is not False">
                                    <td colspan="5" class="text-start small text-muted" style="border-top: none; padding-top: 0;">
                                        <t t-if="line.include_full_service_warranty">Inclut la garantie complète</t>
                                        <t t-else="">Inclut la garantie standard</t>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div id="total" class="row mt-4">
                    <div class="col-sm-7 col-md-6 ms-auto">
                        <table class="table table-sm">
                            <tr class="border-black custom-total">
                                <td><strong>Total :</strong></td>
                                <td class="text-end">
                                    <span t-field="invoice.amount_untaxed"/>
                                </td>
                            </tr>
                            <tr class="border-black custom-total">
                                <td>TVA (20%)</td>
                                <td class="text-end">
                                    <span t-field="invoice.amount_vat_20" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                </td>
                            </tr>
                            <tr class="border-black custom-total">
                                <td><strong>Total TTC :</strong></td>
                                <td class="text-end">
                                    <span t-field="invoice.amount_total_incl_vat_20" t-options='{"widget": "monetary", "display_currency": invoice.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('o_portal_contact_details')]" position="replace">
            <div class="o_portal_contact_details d-flex flex-column gap-2">
                <t t-if="invoice.financing_agency_id">
                    <div>
                        <h6 t-field="invoice.financing_agency_id.name"/>
                        <div t-field="invoice.financing_agency_id" t-options='{"widget": "contact", "fields": ["address", "phone", "email"], "no_marker": False}'/>
                        <div t-if="invoice.financing_agency_id.siren">Siren: <span t-field="invoice.financing_agency_id.siren"/></div>
                    </div>
                </t>
                <t t-else="">
                    <div>
                        <h6 t-field="invoice.partner_id.name"/>
                        <div t-field="invoice.partner_id" t-options='{"widget": "contact", "fields": ["address", "phone", "email"], "no_marker": False}'/>
                        <div t-if="invoice.partner_id.siren">Siren: <span t-field="invoice.partner_id.siren"/></div>
                    </div>
                </t>
            </div>
        </xpath>

      </field>
    </record>
  </data>
</odoo>
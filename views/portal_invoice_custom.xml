<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="portal_invoice_page_inherit_custom" model="ir.ui.view">
      <field name="name">portal.invoice.page.inherit.custom</field>
      <field name="model">account.move</field>
      <field name="inherit_id" ref="account.portal_invoice_page"/>
      <field name="priority">1000</field>
      <field name="arch" type="xml">

        <xpath expr="//div[@id='invoice_content']" position="before">
            <style>
                .custom-invoice-table th, .custom-invoice-table td {
                    vertical-align: middle;
                }
            </style>
        </xpath>

        <xpath expr="//div[@id='invoice_content']" position="replace">
            <div id="invoice_content" class="o_portal_invoice_content">
                <table class="table table-sm table-striped custom-invoice-table">
                    <thead>
                        <tr>
                            <th class="text-start">Produit</th>
                            <th class="text-end">Quantité</th>
                            <th class="text-end">Prix</th>
                            <th class="text-end">Disc.%</th>
                            <th class="text-end">Montant</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="invoice_move.invoice_line_ids" t-as="line">
                            <t t-if="not line.display_type"> 
                                <tr>
                                    <td class="text-start">
                                        <span t-field="line.product_id.name"/>
                                    </td>

                                    <td class="text-end">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                    </td>

                                    <td class="text-end">
                                        <span t-field="line.price_unit" t-options='{"widget": "monetary", "display_currency": line.move_id.currency_id}'/>
                                    </td>

                                    <td class="text-end">
                                        <span t-field="line.discount"/> %
                                    </td>

                                    <td class="text-end">
                                        <span t-field="line.price_total" t-options='{"widget": "monetary", "display_currency": line.move_id.currency_id}'/>
                                    </td>
                                </tr>

                                <tr>
                                    <td colspan="5" class="text-start small text-muted" style="border-top: none; padding-top: 0;">
                                        <t t-if="line.include_full_service_warranty">
                                            Inclut la garantie complète
                                        </t>
                                        <t t-else="">
                                            Inclut la garantie standard
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('o_portal_contact_details')]" position="replace">
            <div class="o_portal_contact_details d-flex flex-column gap-2">
                <t t-if="invoice_move.financing_agency_id">
                    <div class="d-flex justify-content-start align-items-center gap-2">
                        <div>
                            <h6 class="mb-0" t-field="invoice_move.financing_agency_id.name"/>
                            <div t-field="invoice_move.financing_agency_id.address"/>
                            <div t-if="invoice_move.financing_agency_id.phone">
                                <strong>Téléphone :</strong> <span t-field="invoice_move.financing_agency_id.phone"/>
                            </div>
                            <div t-if="invoice_move.financing_agency_id.email">
                                <strong>Email :</strong> <span t-field="invoice_move.financing_agency_id.email"/>
                            </div>
                            <div t-if="invoice_move.financing_agency_id.siren">
                                <strong>Siren :</strong> <span t-field="invoice_move.financing_agency_id.siren"/>
                            </div>
                        </div>
                    </div>
                </t>
                <t t-else="">
                    <div class="d-flex justify-content-start align-items-center gap-2">
                        <div>
                            <h6 class="mb-0" t-field="invoice_move.partner_id.name"/>
                            <div t-field="invoice_move.partner_id.contact_address"/>
                            <div t-if="invoice_move.partner_id.phone">
                                <strong>Téléphone :</strong> <span t-field="invoice_move.partner_id.phone"/>
                            </div>
                            <div t-if="invoice_move.partner_id.email">
                                <strong>Email :</strong> <span t-field="invoice_move.partner_id.email"/>
                            </div>
                            <div t-if="invoice_move.partner_id.siren">
                                <strong>Siren :</strong> <span t-field="invoice_move.partner_id.siren"/>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </xpath>

        <xpath expr="//div[@id='total']" position="replace">
            <div id="total" class="row">
                <div class="col-sm-7 col-md-6 ms-auto">
                    <table class="table table-sm">
                        <tr class="border-black custom-total">
                            <td><strong>TVA (20%) :</strong></td>
                            <td class="text-end">
                                <span t-field="invoice_move.amount_vat_20" t-options='{"widget": "monetary", "display_currency": invoice_move.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-black custom-total">
                            <td><strong>Total TTC :</strong></td>
                            <td class="text-end">
                                <strong t-field="invoice_move.amount_total_incl_vat_20" t-options='{"widget": "monetary", "display_currency": invoice_move.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </xpath>

      </field>
    </record>
  </data>
</odoo>
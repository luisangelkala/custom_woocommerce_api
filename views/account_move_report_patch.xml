                    <li style="font-size: 1.2em;"><strong>Leasymat</strong></li>
                    <li>7 pasagge turquetil, 75011 Paris</li>
                    <li>Téléphone: 01 48 96 24 45</li>
                    <li>Email: commercial@leasymat.fr</li>
                    <li>Siren: 983 918 996</li>
                </ul>
            </div>
        </xpath>
    </template>

    <!-- Parche para el Header tipo 'Standard' (Limpio/Clean) - Muy común por defecto -->
    <template id="custom_external_layout_standard_patch" inherit_id="web.external_layout_standard">
        <xpath expr="//div[@name='company_address']" position="replace">
            <div class="mb4">
                <!-- CSS inyectado aquí para asegurar que afecte al layout global y oculte el footer -->
                <style>.footer { display: none !important; }</style>
                <ul class="list-unstyled">
                    <li style="font-size: 1.2em;"><strong>Leasymat</strong></li>
                    <li>7 pasagge turquetil, 75011 Paris</li>
                    <li>Téléphone: 01 48 96 24 45</li>
                    <li>Email: commercial@leasymat.fr</li>
                    <li>Siren: 983 918 996</li>
                </ul>
            </div>
        </xpath>
    </template>

</odoo>
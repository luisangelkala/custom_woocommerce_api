<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="report_saleorder_document_inherit_custom"
          inherit_id="sale.report_saleorder_document">

    <xpath expr="//th[@name='th_quantity']" position="replace">
        <th name="th_quantity" class="text-end">Quantit√©</th>
        <th name="th_loyer_unit" class="text-end">Loyer Unitaire</th>
        <th name="th_ristourne" class="text-end">Ristourne en %</th>
        <th name="th_loyer_mensuel" class="text-end">Loyer Mensuel</th>
    </xpath>

    <xpath expr="//th[@name='th_priceunit']" position="replace"/>
    <xpath expr="//th[@name='th_subtotal']" position="replace"/>
    <xpath expr="//th[@name='th_taxes']" position="replace"/>

    <xpath expr="//td[@name='td_quantity']" position="replace">
        <td name="td_quantity" class="text-end">
            <span t-field="line.product_uom_qty"/>
        </td>
        
        <td class="text-end">
            <span t-field="line.price_quote" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
        </td>

        <td class="text-end">
            <span t-field="line.discount_price"/> %
        </td>

        <td class="text-end o_price_total">
             <span t-field="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
        </td>
    </xpath>

    <xpath expr="//td[@name='td_priceunit']" position="replace"/>
    <xpath expr="//td[@name='td_subtotal']" position="replace"/>
    <xpath expr="//td[@name='td_taxes']" position="replace"/>

    <xpath expr="//div[@id='total']//table" position="inside">
      <tr class="border-black o_subtotal">
        <td><span>TVA (20%)</span></td>
        <td class="text-end">
          <span t-field="doc.amount_vat_20" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
        </td>
      </tr>
      <tr class="border-black o_total">
        <td><span>Total TTC</span></td>
        <td class="text-end">
          <span t-field="doc.amount_total_incl_vat_20" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
        </td>
      </tr>
    </xpath>

  </template>
</odoo>